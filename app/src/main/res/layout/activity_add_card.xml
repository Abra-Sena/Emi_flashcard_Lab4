<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddCard">

    <EditText
        android:id="@+id/questionTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Enter Card question here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/answerTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:hint="Enter Correct answer here"
        android:inputType="textMultiLine"
        android:textColorHighlight="@color/myGreenColor" />

    <EditText
        android:id="@+id/answerWrong1TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Enter a wrong answer here"
        android:inputType="textMultiLine"
        android:textColorHighlight="@color/colorPrimary" />

    <EditText
        android:id="@+id/answerWrong2TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Enter another wrong answer here"
        android:inputType="textMultiLine"
        android:textColorHighlight="@color/colorPrimary" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="9dp"
        android:scaleType="fitCenter"
        android:text="Save" />

    <ImageView
        android:id="@+id/my_cancel_icon"
        android:layout_width="42dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="11dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_cancel_icon" />


</RelativeLayout>