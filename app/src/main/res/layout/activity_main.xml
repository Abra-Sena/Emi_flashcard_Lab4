<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBackColor"
    android:id="@+id/rootView"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="402dp"
        android:layout_height="159dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/answer_background"
        android:elevation="5dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/myBlack"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/answer_option1"
        android:layout_width="385dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="245dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Bill Clinton"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer_option2"
        android:layout_width="385dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="149dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer_option3"
        android:layout_width="385dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/option_answer_background"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Richard Nixon"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/eye_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_eye_view" />
    <ImageView
        android:id="@+id/eye_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_eye_hide"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/my_add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_add_icon" />

    <ImageView
        android:id="@+id/my_edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="379dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_edit_icon" />

    <ImageView
        android:id="@+id/my_arrow_icon"
        android:layout_width="74dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="322dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_icon" />

    <ImageView
        android:id="@+id/my_trash_icon"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="305dp"
        android:layout_marginRight="305dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trash_icon" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="191dp"
        android:layout_marginRight="176dp"
        android:adjustViewBounds="true"
        android:background="@drawable/timer_view"
        android:gravity="center"
        android:textColor="@color/myBlack"
        android:textSize="24sp" />

</RelativeLayout>